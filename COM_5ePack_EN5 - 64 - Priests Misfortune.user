    <tag group="DeityCat" tag="Celtic"/>
    </thing>
  <thing id="dei5CNemes" name="Nemesis" description="The Greek spirit of retribution against hubris." compset="Deity" uniqueness="unique">
    <usesource source="EN5_64"/>
    <tag group="DeityCat" tag="Greek"/>
