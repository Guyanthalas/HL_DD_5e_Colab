    <tag group="Helper" tag="NeedAttune" name="Requires Attunement" abbrev="Requires Attunement"/>
    <eval phase="Final" priority="20000"><![CDATA[
      ~restrict the list of weapons to valid ones only
      gizmo.child[gCustMagic].field[gItemExpr].text = #magicgearexpr[] & " & (wGroup.Sword)"

      ~set our name based on the type of weapon chosen
      perform gizmo.findchild[BaseWep].setfocus

        field[livename].text = "Mind Blade"

      field[shortname].text = field[livename].text
      field[sbName].text = field[livename].text]]>
      <after name="gItemExpr Set"/>
      </eval>
    <child entity="gMagWeapon"></child>
    </thing>
  <thing id="ma5CMinCar" name="Mind Carapace Armor" description="Created by mind flayers, this suit of armor grants advantage on Intelligence, Wisdom, and Charisma saving throws and makes its wearer immune to the frightened condition. The armor can only be attuned by a creature the mind flayer selects. For all other users, the armor functions as normal armor of its type." compset="MagicArmor" buytemplate="BuyMoney" xactspecial="2">
