  <thing id="p5CFleClaw" name="Flensing Claws" description="This adjustment ability is granted to creatures that have been modified by mind flayers. If the creature already has claws or an unarmed attack with its forelegs, this attack replaces them. \n\nThese cannot be fitted to Tiny or Gargantuan creatures." compset="InPlay">
    <usesource source="5eVGtMCP"/>
    <tag group="OthAdjCat" tag="UserBot5th"/>
    <tag group="Helper" tag="NoIncr"/>
    <tag group="ChooseSrc1" tag="Hero"/>
    <bootstrap thing="wClaw">
      <autotag group="AttackTarg" tag="1Target"/>
      <assignval field="wReach" value="5"/>
      <assignval field="wDieCount" value="1"/>
      <assignval field="wDieSize" value="10"/>
      <assignval field="livename" value="Flensing Claws"/>
      <assignval field="sbName" value="Flensing Claws"/>
      </bootstrap>
    <eval phase="PostAttr" priority="10000"><![CDATA[doneif (hero.tagis[Size.Tiny] = 1)
doneif (hero.tagis[Size.Gargantuan] = 1)
     foreach pick in hero from BaseWep where "thingid.wClaw"
     
     if (hero.tagis[Size.Small] <> 0) then
          eachpick.field[wDieCount].value = 1
          eachpick.field[wDieSize].value = 8
     elseif (hero.tagis[Size.Medium] <> 0) then
          eachpick.field[wDieCount].value = 1
          eachpick.field[wDieSize].value = 10
     elseif (hero.tagis[Size.Large] <> 0) then
          eachpick.field[wDieCount].value = 1
          eachpick.field[wDieSize].value = 12
     elseif (hero.tagis[Size.Huge] <> 0) then
          eachpick.field[wDieCount].value = 2
          eachpick.field[wDieSize].value = 8       
     endif
     nexteach]]></eval>
    <exprreq message="Cannot be Tiny or Gargantuan">hero.tagis[Size.Tiny] + hero.tagis[Size.Gargantuan] = 0</exprreq>
    </thing>
